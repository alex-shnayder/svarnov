@import '#/src/entities';

.Banner {
	@extend %component;
	background: url('./banner.jpg') 50% 50% no-repeat;
	background-size: cover;
}

.text {
	@extend %element;
	display: table;
	width: 100%;
	height: 350px;
}

.textInner {
	@extend %element;
	vertical-align: middle;
	display: table-cell;
	font-size: 56px;
	font-weight: 300;
	line-height: 1.3;
	color: #fff;
	text-shadow: 1px 2px 1px rgba(0, 0, 0, 0.5);
}
