@import '#/src/config';
@import '#/src/entities';

.Catalog {
  @extend %component;
}

.list {
  @extend %element;
  font-size: 0;
}

.listItem {
  @extend %element;
  display: inline-block;
  width: 48.5%;
  margin-top: 3%;
  vertical-align: top;

  &:nth-child(1),
  &:nth-child(2) {
    margin-top: 0;
  }

  &:nth-child(2n) {
    margin-left: 3%;
  }
}
